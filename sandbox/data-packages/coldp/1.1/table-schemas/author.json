{
    "identifier": "http://rs.gbif.org/data-packages/coldp/author",
    "name": "author",
    "title": "Author",
    "url": "http://rs.gbif.org/sandbox/data-packages/coldp/1.1/table-schemas/author.json",
    "description": "Normalised and structured authors that can be referred to by names, references and taxon scrutinizers. All entities also allow to specify a modifedBy field which must reference an Author identifier here.",
    "fields":
    [
        {
            "name": "ID",
            "type": "string",
            "format": "default",
            "title": "ID",
            "description": "Unique identifier for the author / person. Can be referenced from any modifiedBy field.",
            "constraints":
            {
                "unique": true,
                "required": true
            }
        },
        {
            "name": "sourceID",
            "type": "string",
            "format": "default",
            "title": "sourceID",
            "description": "Optional identifier for the source this record came from as listed in the metadata.yaml"
        },
        {
            "name": "alternativeID",
            "type": "string",
            "format": "default",
            "title": "alternativeID",
            "description": "A comma concatenated list of alternative identifiers for the author. Every alternative identifier must be in the form of scope:id. See identifiers for all details and common scopes. Recommended identifier scopes for authors are orcid, ipni, wikidata & viaf."
        },
        {
            "name": "given",
            "type": "string",
            "format": "default",
            "title": "given",
            "description": "List of given names, concatenated by a comma."
        },
        {
            "name": "family",
            "type": "string",
            "format": "default",
            "title": "family",
            "description": "The family name including any leading particles if existing."
        },
        {
            "name": "suffix",
            "type": "string",
            "format": "default",
            "title": "suffix",
            "description": "Optional suffix to distinguish persons with identical surnames. In well known cases of father and son, the son should be distinguished by ‘f.’ or ‘filius’ in the suffix."
        },
        {
            "name": "abbreviationBotany",
            "type": "string",
            "format": "default",
            "title": "abbreviationBotany",
            "description": "Standard form (official abbreviation) of the persons name for use in a botanical author citation."
        },
        {
            "name": "alternativeNames",
            "type": "string",
            "format": "default",
            "title": "alternativeNames",
            "description": "A | separated list of alternative names this person is known under."
        },
        {
            "name": "sex",
            "type": "string",
            "format": "default",
            "title": "sex",
            "description": "Biological sex of the person.",
            "constraints":
            {
                "enum":
                [
                    "female",
                    "male",
                    "hermaphrodite"
                ]
            }
